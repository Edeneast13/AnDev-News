<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_volume"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brianroper.andevweekly.views.VolumeActivity"
    android:background="@color/baseBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/volume_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/volume_title"
        android:text="240"
        android:textColor="@color/primaryText"
        android:textSize="25sp"
        android:gravity="center"
        android:paddingTop="4dp"
        android:fontFamily="sans-serif-light"
        android:layout_below="@id/volume_toolbar"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/volume_recycler"
        android:layout_below="@+id/volume_title">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>