<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.brianroper.androidweekly"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".views.ArchiveActivity">
        </activity>
        <activity
            android:name="com.thefinestartist.finestwebview.FinestWebViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@style/WeeklyMaterial"/>

        <service android:name=".services.ArchiveService"/>
        <service android:name=".services.VolumeService"/>

        <activity
            android:name=".views.VolumeActivity"
            android:parentActivityName=".views.ArchiveActivity">
        </activity>
        <activity android:name=".views.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".views.AboutActivity"
            android:theme="@style/AboutMaterial"
            android:parentActivityName=".views.ArchiveActivity">
        </activity>
    </application>

</manifest>